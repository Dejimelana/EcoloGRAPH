# ========================================
# LLM LOCAL (Ollama)
# ========================================
LLM_PROVIDER=local
LOCAL_LLM_BASE_URL=http://localhost:11434/v1
LOCAL_LLM_MODEL=qwen3:8b
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Dual-Model Architecture:
#   - Ingestion model: fast, used for entity extraction (with /no_think)
#   - Reasoning model: deeper, used for agent chat and queries
INGESTION_LLM_MODEL=qwen3:8b
REASONING_LLM_MODEL=qwen3:8b

# ========================================
# EMBEDDINGS LOCALES
# ========================================
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ========================================
# QDRANT (Vector Store)
# ========================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=ecolograh_chunks

# ========================================
# NEO4J (Graph Database)
# ========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# ========================================
# APIs EXTERNAS (para enriquecimiento)
# ========================================
# CrossRef - no requiere API key para uso básico
CROSSREF_EMAIL=your_email@example.com

# Semantic Scholar - no requiere API key para uso básico
# Si tienes API key, añádela aquí:
# SEMANTIC_SCHOLAR_API_KEY=your_key_here

# ========================================
# RATE LIMITS (segundos entre requests)
# ========================================
CROSSREF_RATE_LIMIT=1
SEMANTIC_SCHOLAR_RATE_LIMIT=1
FISHBASE_RATE_LIMIT=2
GBIF_RATE_LIMIT=1
WORMS_RATE_LIMIT=1

# ========================================
# PATHS
# ========================================
DATA_RAW_PATH=data/raw
DATA_PROCESSED_PATH=data/processed
DATA_CACHE_PATH=data/cache
